{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "Randomizr API",
        "description": "A simple API for generating all types of random stuff",
        "contact": {
            "name": "Daria Mayorova",
            "email": "d.mayorova@gmail.com",
            "url": "https://github.com/mayorova"
        },
        "license": {
            "name": "MIT",
            "url": "http://github.com/gruntjs/grunt/blob/master/LICENSE-MIT"
        }
    },
    "host": "randomizr-api.herokuapp.com",
    "basePath": "/api",
    "schemes": [
        "http"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/number": {
            "get": {
                "description": "Returns a random number, by default an integer from 1 to 100\n",
                "operationId": "number",
                "parameters": [
                    {
                        "name": "min",
                        "description": "minimum number (inclusive)",
                        "in": "query",
                        "required": false,
                        "type": "number"
                    },
                    {
                        "name": "max",
                        "description": "maximum number (inclusive)",
                        "in": "query",
                        "required": false,
                        "type": "number"
                    },
                    {
                        "name": "precision",
                        "description": "total number of digits in the number",
                        "in": "query",
                        "required": false,
                        "type": "integer",
                        "format": "int32"
                    },
                    {
                        "name": "scale",
                        "description": "number of digits following the decimal point",
                        "in": "query",
                        "required": false,
                        "type": "integer",
                        "format": "int32"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "random number",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "number": {
                                    "type": "number"
                                }
                            }
                        }
                    },
                    "default": {
                        "description": "unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        },
        "/date": {
            "get": {
                "description": "Generates a random date, by default between January 1, 1970 and current date\n",
                "operationId": "date",
                "parameters": [
                    {
                        "name": "from",
                        "description": "start date (inclusive), format yyyy-mm-dd",
                        "in": "query",
                        "required": false,
                        "type": "string"
                    },
                    {
                        "name": "to",
                        "description": "end date (inclusive), format yyyy-mm-dd",
                        "in": "query",
                        "required": false,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "random date in ISO8601 format\n",
                        "schema": {
                            "type": "string",
                            "format": "date"
                        }
                    },
                    "default": {
                        "description": "unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        },
        "/uuid": {
            "get": {
                "description": "Generates a v4 random UUID \n",
                "operationId": "uuid",
                "responses": {
                    "200": {
                        "description": "random UUID v4",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "uuid": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "default": {
                        "description": "unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "Error": {
            "required": [
                "code",
                "message"
            ],
            "properties": {
                "code": {
                    "type": "integer",
                    "format": "int32"
                },
                "message": {
                    "type": "string"
                }
            }
        }
    }
}